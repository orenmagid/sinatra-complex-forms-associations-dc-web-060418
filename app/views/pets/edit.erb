<h1>Update Pet</h1>

<form action="/pets/<%=@pet.id%>" method="POST">
  <!-- <input type="hidden" id="hidden" name="_method" value="patch"> -->
  <label>Name:</label>
  <br>

  <input type="text" id="pet_name" name="pet[name]" value="<%=@pet.name%>">

  <br>

  <label>Choose an existing owner:</label>
  <% @owners.each do |owner| %>
    <input type="radio" name="pet[owner_id]" value="<%=owner.id%>" id="<%=owner.id%>" <%='checked' if @pet.owner == owner %>> <%=owner.name%></input>
  <%end%>

  <br>

  <label>and/or, create a new owner:</label>
  <br>
  <label>name:</label>
    <input type="text" id="owner_name" name="owner[name]"></input>
    <br>
  <input type="submit" value="Update Pet">
  </form>
